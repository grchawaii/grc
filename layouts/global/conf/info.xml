    <extra_vars>
		<group>
			<title xml:lang="ko">기본 설정</title>
			<var name="layout_style" type="select">
				<title xml:lang="ko">레이아웃 형태</title>
				<description xml:lang="ko">레이아웃 형태</description>
				<options value="ece">
					<title xml:lang="ko">메인페이지용</title>
				</options>
				<options value="ec">
					<title xml:lang="ko">서브페이지용</title>
				</options>
				<options value="c">
					<title xml:lang="ko">로그인 페이지용</title>
				</options>
			</var>
		</group>
		<group>
			<title xml:lang="ko">메인페이지</title>
			<var name="preach" type="text">
				<title xml:lang="ko">설교안내 바로가기 링크</title>
				<description xml:alng="ko">설교안내 바로가기 링크를 입력해 주십시오 </description>
			</var>
			<var name="worship" type="text">
				<title xml:lang="ko">예배안내 바로가기 링크</title>
				<description xml:alng="ko">예배안내 바로가기 링크를 입력해 주십시오 </description>
			</var>
			<var name="banner_img1" type="image">
				<title xml:lang="ko">좌측 배너 이미지1</title>
				<description xml:alng="ko">좌측 배너 이미지1을 등록해 주십시오 </description>
			</var>
			<var name="banner_url1" type="text">
				<title xml:lang="ko">좌측 배너 이미지1의 링크</title>
				<description xml:alng="ko">좌측 배너 이미지1을 눌렀을때 이동할 주소 </description>
			</var>
			<var name="banner_alt1" type="text">
				<title xml:lang="ko">좌측 배너 이미지1의 alt</title>
				<description xml:alng="ko">좌측 배너 이미지1의 alt값을 입력해 주십시오 </description>
			</var>

			<var name="banner_img2" type="image">
				<title xml:lang="ko">좌측 배너 이미지2</title>
				<description xml:alng="ko">좌측 배너 이미지2을 등록해 주십시오 </description>
			</var>
			<var name="banner_url2" type="text">
				<title xml:lang="ko">좌측 배너 이미지2의 링크</title>
				<description xml:alng="ko">좌측 배너 이미지2을 눌렀을때 이동할 주소 </description>
			</var>
			<var name="banner_alt2" type="text">
				<title xml:lang="ko">좌측 배너 이미지2의 alt</title>
				<description xml:alng="ko">좌측 배너 이미지2의 alt값을 입력해 주십시오 </description>
			</var>


			<!-- <var name="celebration" type="text">
				<title xml:lang="ko">찬양과 경배 mid 값</title>
